if [ "$1" = "production" ]; then
    REPO="/etc/puppet/$1"
else
    REPO="/etc/puppet/environments/$1"
fi

if [ -d "$REPO/.hg" ]; then
    # filter out the "Not trusting" warning
    /usr/local/bin/hg ident -i $REPO 2>/dev/null
elif [ -d "$REPO/.git" ]; then
    (cd $REPO; /usr/bin/git describe --all --always --dirty)
else
    echo "unknown"
fi
