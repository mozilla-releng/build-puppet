    "verbose": <%= @verbose_logging %>,
    "dmg": "<%= @dmg_location %>",
    "hfsplus": "<%= @hfsplus_location %>",
    "zipalign": "<%= @zipalign_location %>",
    "gpg_pubkey": "<%= scope.lookupvar("signing_scriptworker::settings::root") %>/KEY",

    "datadog_port": <%= scope.lookupvar("signing_scriptworker::settings::datadog_port") %>,
    "datadog_host": <%= scope.lookupvar("signing_scriptworker::settings::datadog_host") %>
