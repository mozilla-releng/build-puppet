{
    "work_dir": "<%= scope.lookupvar("signing_scriptworker::settings::root") %>/work",
    "artifact_dir": "<%= scope.lookupvar("signing_scriptworker::settings::root") %>/artifacts",

    "my_ip": "<%= @ipaddress %>",
    "signing_server_config": "<%= scope.lookupvar("signing_scriptworker::settings::root") %>/passwords.json",
    "ssl_cert": "<%= scope.lookupvar("signing_scriptworker::settings::root") %>/lib/python<%= scope.lookupvar("signing_scriptworker::settings::virtualenv_version") %>/site-packages/signingscript/data/host.cert",
    "schema_file": "<%= scope.lookupvar("signing_scriptworker::settings::root") %>/lib/python<%= scope.lookupvar("signing_scriptworker::settings::virtualenv_version") %>/site-packages/signingscript/data/signing_task_schema.json",
