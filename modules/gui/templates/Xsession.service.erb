# Init script for Xsession service

[Unit]
Description=Xsession service.
# Start Xsession only after x11 or xvfb start
After=<%= if @on_gpu == true then "x11.service" else "xvfb.service" end %>

[Service]
TimeoutSec=5min
IgnoreSIGPIPE=no
KillMode=process
GuessMainPID=no
ExecStart=/bin/su - -c "DISPLAY=:0 /etc/X11/Xsession" <%= scope.lookupvar('::config::builder_username') %>

[Install]
WantedBy=multi-user.target