{
    "work_dir": "<%= scope.lookupvar("balrog_scriptworker::settings::root") %>/work",
    "artifact_dir": "<%= scope.lookupvar("balrog_scriptworker::settings::root") %>/artifacts",

    "verbose": <%= scope.lookupvar("balrog_scriptworker::settings::verbose_logging") %>,
    "dummy": <%= @env_config["dummy"] %>,
    "disable_certs": false,
    "taskcluster_scope_prefix": "<%= @env_config['taskcluster_scope_prefix'] %>",

    "server_config": {
        "nightly": {
            "api_root": "<%= @env_config["balrog_api_root"] %>",
            "auth0_domain": "<%= @env_config["auth0_domain"] %>",
            "auth0_client_id": "<%= @env_config["auth0_client_id"] %>",
            "auth0_client_secret": "<%= @env_config["auth0_client_secret"] %>",
            "auth0_audience": "<%= @env_config["auth0_audience"] %>",
            "allowed_channels": ["nightly"]
        },
        "aurora": {
            "api_root": "<%= @env_config["balrog_api_root"] %>",
            "auth0_domain": "<%= @env_config["auth0_domain"] %>",
            "auth0_client_id": "<%= @env_config["auth0_client_id"] %>",
            "auth0_client_secret": "<%= @env_config["auth0_client_secret"] %>",
            "auth0_audience": "<%= @env_config["auth0_audience"] %>",
            "allowed_channels": ["aurora"]
        },
        "beta": {
            "api_root": "<%= @env_config["balrog_api_root"] %>",
            "auth0_domain": "<%= @env_config["auth0_domain"] %>",
            "auth0_client_id": "<%= @env_config["auth0_client_id"] %>",
            "auth0_client_secret": "<%= @env_config["auth0_client_secret"] %>",
            "auth0_audience": "<%= @env_config["auth0_audience"] %>",
            "allowed_channels": ["beta", "beta-localtest", "beta-cdntest"]
        },
        "release": {
            "api_root": "<%= @env_config["balrog_api_root"] %>",
            "auth0_domain": "<%= @env_config["auth0_domain"] %>",
            "auth0_client_id": "<%= @env_config["auth0_client_id"] %>",
            "auth0_client_secret": "<%= @env_config["auth0_client_secret"] %>",
            "auth0_audience": "<%= @env_config["auth0_audience"] %>",
            "allowed_channels": ["release", "release-localtest", "release-cdntest"]
        },
        "esr": {
            "api_root": "<%= @env_config["balrog_api_root"] %>",
            "auth0_domain": "<%= @env_config["auth0_domain"] %>",
            "auth0_client_id": "<%= @env_config["auth0_client_id"] %>",
            "auth0_client_secret": "<%= @env_config["auth0_client_secret"] %>",
            "auth0_audience": "<%= @env_config["auth0_audience"] %>",
            "allowed_channels": ["esr", "esr-localtest", "esr-cdntest"]
        },
        "dep": {
            "api_root": "https://admin-stage.balrog.nonprod.cloudops.mozgcp.net/api",
            "auth0_domain": "<%= @env_config["auth0_domain"] %>",
            "auth0_client_id": "<%= @env_config["auth0_client_id"] %>",
            "auth0_client_secret": "<%= @env_config["auth0_client_secret"] %>",
            "auth0_audience": "<%= @env_config["auth0_audience"] %>",
            "allowed_channels": [
                "nightly", "aurora", "beta", "beta-localtest", "beta-cdntest",
                "release", "release-localtest", "release-cdntest", "esr",
                "esr-localtest", "esr-cdntest"
            ]
        }
    }
}

