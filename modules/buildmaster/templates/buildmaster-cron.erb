MAILTO=<%=scope.lookupvar('config::buildbot_mail_to')%>
@hourly <%=scope.lookupvar('users::builder::username')%> <%=full_master_dir%>/bin/python <%=full_master_dir%>/tools/buildfarm/maintenance/watch_twistd_log.py -t .<%=master_name%>-last-time.txt -n <%=master_name%> -f <%=scope.lookupvar('users::builder::username')%>@<%=fqdn%> -e <%=scope.lookupvar('config::buildbot_mail_to')%> <%=full_master_dir%>/master
